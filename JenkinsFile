// env.GIT_URL = 'https://github.com/tarikadeepak/serverless-framework.git'

// node ('master') {
//     stage('NPM Build'){
//         sh '''
//             npm install
//         '''
//     }
//     stage('Deploy on AWS'){
//         sh '''
//             serverless deploy
//         '''
//     }
// }
def awsCredentials = [[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'serverlessUser']]

pipeline {
    agent {
        node {
            label 'master'
            ENV SOURCE_DIR=/
            COPY . $SOURCE_DIR
            WORKDIR $SOURCE_DIR
        }
    }
   
    environment {
        AWS_REGION = 'eu-west-1'
        HOME = '.'
    }
    options {
        disableConcurrentBuilds()
        parallelsAlwaysFailFast()
        timestamps()
        withCredentials(awsCredentials)
    }
    stages {
        stage('NPM Build'){
            steps {
            sh '''
                npm install
            '''
            }
        }
        stage('Deploy on AWS'){
            steps {
            sh '''
                serverless deploy
            '''
            }
        }
    }
}